<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
        version="2.5">
    <display-name>Auth0 Servlet Example</display-name>
    <servlet>
        <servlet-name>Hello</servlet-name>
        <servlet-class>com.auth0.example.HelloServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Auth</servlet-name>
        <servlet-class>com.auth0.example.AuthServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthCallback</servlet-name>
        <servlet-class>com.auth0.example.AuthServletCallback</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/hello/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Auth</servlet-name>
        <url-pattern>/auth/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthCallback</servlet-name>
        <url-pattern>/oauth2callback/*</url-pattern>
    </servlet-mapping>
</web-app>
